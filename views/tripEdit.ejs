      //   datetime: $('#datetime').val(),
      //   flight: $('#flight').val(),
      //   name: $('#name').val()
      // }
      console.log(trip_info)
      axios.get('/edit', {
        params: trip_info
      }
      ).then((res) => {
        console.log(res)
      })

      // $.post('/book', data, (res) => {
